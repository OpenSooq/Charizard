{
    "overrides":[{
        "files": "public/**/*.js",
        "env": {
            "browser": true,
            "node": false,
            "es6": false
        },
        "parserOptions": {
            "sourceType": "script"
        },
        "extends": [
            "plugin:compat/recommended"
        ],
        // "browserslist": ["chrome 70", "last 1 versions", "not ie <= 8"],
        "plugins": [
        ],
        "rules": {
            "no-var": ["off"]
        }
    }],
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:promise/recommended",
        "google"
    ],
    "plugins": [
        "promise"
    ],
    "rules": {
        "camelcase": ["off"],
        "no-console": ["off"],
        "require-jsdoc": ["warn"],
        "one-var": ["off"],
        "max-len": ["warn", {
            "ignoreComments": true,
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "code": 200
        }],
        "indent": ["warn", 4],
        "no-unused-vars":["warn"],
        "no-extra-semi":["warn"],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}